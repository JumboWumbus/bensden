generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comment {
  id        String   @id @default(cuid())
  name      String?  @db.VarChar(30)
  website   String?  @db.VarChar(50)
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
